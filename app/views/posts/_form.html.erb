<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :category_id, 'category' %><br>
    <%= f.collection_select :category_id, Category.all, :id, :title, {:prompt => 'Please select the author of this post'},  { class: 'browser-default'} %>
  </div>
  <div class="field">
    <%= f.label :approved_at %><br>
    <%= f.datetime_select :approved_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
